@page
@model RenielDavid.webdev.Pages.Manage.Vids.Create
@{
}
<h1>ADD NEW PATIENT</h1>
<div class="row justify-content-center">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <div class="form-group">
                        <label asp-for="View.Title">title</label>
                        <input type="text" class="form-control" placeholder="Enter FirstName" asp-for="View.Title">
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Description">Description</label>
                        <input type="text" class="form-control" placeholder="Enter FirstName" asp-for="View.Description">
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="View.DateOfPublish">DateOfPublished</label>
                        <input type="datetime-local" class="form-control" placeholder="Enter abbreviation" asp-for="View.DateOfPublish">
                    </div>
                   
                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a href="~/manage/patients" class="btn btn-secondary">Cancel</a>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

