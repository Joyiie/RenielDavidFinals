@page
@model RenielDavid.webdev.Pages.Manage.Vids.Delete
@{
}
<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form method="Post">
                    <h3>Delete</h3>
                    <div class="form-group">
                        <input type="hidden" asp-for="View.ServiceId" />
                        <label asp-for="View.Title">title</label>
                        <input type="text" class="form-control" placeholder="Enter role name" asp-for="View.Title" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.Description">Description</label>
                        <input type="text" class="form-control" placeholder="Enter description" asp-for="View.Description" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="View.DateOfPublish">Dateofpublished</label>
                        <input type="datetime-local" class="form-control" placeholder="DateTime" asp-for="View.DateOfPublish">
                    </div>
                    <div class="form-group alert-danger">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="~/manage/roles" class="btn btn-secondary">Cancel</a>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
